<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Academic Assistant</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <h1>
                        <a class="header-logo" href ="/">Academic Assitant</a>
                    </h1>
                </div>
                <div class="float-right" style="margin-top: 2.4rem">
                        @Html.Partial("_LoginPartial")
                </div>
            </div>
        </header>
        <div id="body" style="padding-top:20px;">
            @RenderSection("featured", required: false)
            @RenderBody()
        </div>
        <footer>
            <div class="content-wrapper">
                <div style="text-align:center;">
                    <p>&copy; @DateTime.Now.Year - Microsoft Academic Search</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
